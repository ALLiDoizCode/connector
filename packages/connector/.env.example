# ============================================
# Connector Configuration
# ============================================

# HTTP Health Endpoint Port
HTTP_PORT=8080

# BTP WebSocket Port
BTP_PORT=3000

# ============================================
# Workflow Peer Configuration (Epic 31)
# ============================================

# Workflow Peer HTTP Port
WORKFLOW_PEER_PORT=8203

# Workflow Peer BTP WebSocket Port
WORKFLOW_BTP_PORT=3203

# Maximum Image Size (10MB in bytes)
MAX_IMAGE_SIZE=10485760

# ============================================
# Facilitator Configuration (Epic 31 Story 31.2)
# ============================================

# Facilitator HTTP Port
FACILITATOR_HTTP_PORT=3001

# Facilitator BTP Port
FACILITATOR_BTP_PORT=3200

# Connector1 BTP URL
CONNECTOR1_BTP_URL=ws://connector-1:3201

# Connector1 Auth Token
CONNECTOR1_AUTH_TOKEN=shared-secret-123

# Workflow Peer Payment Pointer
WORKFLOW_PEER_PAYMENT_POINTER=$workflow-peer/workflow

# Upload Limits
ACCEPTED_FORMATS=image/jpeg,image/png,image/webp

# Timeouts
SPSP_TIMEOUT=5000
WORKFLOW_TIMEOUT=30000

# ============================================
# Image Processing Defaults
# ============================================

# Default Resize Width (pixels)
DEFAULT_RESIZE_WIDTH=1024

# Default Resize Height (pixels)
DEFAULT_RESIZE_HEIGHT=768

# Default Watermark Text
DEFAULT_WATERMARK_TEXT="Workflow ILP Demo"

# Default Optimize Quality (1-100)
DEFAULT_OPTIMIZE_QUALITY=80
